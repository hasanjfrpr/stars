<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_shape"
    android:layout_marginHorizontal="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="لطفا قیمت شهریه را وارد کنید"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialog_setting_title"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:background="@color/on_primary"
            android:hint="قیمت">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ET_setting_dialog_price_period"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Tv_setting_dialog_cancel_period"
                android:layout_width="wrap_content"
                android:text="بستن"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/primary"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/TV_setting_dialog_ok_period"
                android:layout_width="wrap_content"
                android:text="تایید"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>